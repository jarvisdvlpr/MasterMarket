
@{
    ViewData["Title"] = "Create";
}

@section Css{
    <!--Dropzon css -->
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/vendors/dropzone.css">
    <!-- Select2 css -->
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/select2.min.css">
    <!-- Plugins css -->
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/vendors/chartist.css">
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/vendors/date-picker.css">
    <!-- Bootstrap-tag input css -->
    <link rel="stylesheet" type="text/css" href="~/manage/assets/css/vendors/bootstrap-tagsinput.css">
}
@model CompanyFormViewModel

    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-sm-8 m-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-header-2">
                                <h5>Инофрмация о Производителе</h5>
                            </div>

                            <form class="theme-form theme-form-2 mega-form" asp-action="create" asp-controller="company" method="post" enctype="multipart/form-data">
                                <div class="mb-4 row align-items-center">
                                    <label asp-for="Name" class="form-label-title col-sm-3 mb-0">Называние</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Name" class="form-control" type="text"
                                           placeholder="Category Name">
                                    </div>
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>

                                <div class="mb-4 row align-items-center">
                                    <label class="col-sm-3 col-form-label form-label-title" asp-for="ImageFile">Изображение</label>
                                    <div class="col-sm-9">
                                        <input class="form-control form-choose" asp-for="ImageFile" type="file"
                                           id="formFile" multiple>
                                    </div>
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="row">
                                            <label class="form-label-title col-sm-3 mb-0" asp-for="Description">Описание</label>
                                            <textarea class="form-control" asp-for="Description"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="mybrobtn" style="display: flex; justify-content: space-around; margin-top: 20px;">
                                    <button type="submit" class="btn btn-solid w-25">Подтвердить</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @section Scripts{
    <!--I added for the ProductsAdding Description form-->
    <!-- select2 js -->
    <script src="~/manage/assets/js/select2.min.js"></script>
    <script src="~/manage/assets/js/select2-custom.js"></script>

    @*<!-- ck editor js -->
    <script src="~/manage/assets/js/ckeditor.js"></script>
    <script src="~/manage/assets/js/ckeditor-custom.js"></script>*@

    <!--Dropzon js -->
    <script src="~/manage/assets/js/dropzone/dropzone.js"></script>
    <script src="~/manage/assets/js/dropzone/dropzone-script.js"></script>

     <!-- bootstrap tag-input js -->
    <script src="~/manage/assets/js/bootstrap-tagsinput.min.js"></script>
    <script src="~/manage/assets/js/sidebar-menu.js"></script>

    }
